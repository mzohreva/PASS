<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                             http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <!-- Filters -->
    <filter>
        <filter-name>servletCacheControl</filter-name>
        <filter-class>pass.web.servletapi.CacheControlFilter</filter-class>
        <init-param>
            <param-name>enableCaching</param-name>
            <param-value>false</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>staticContentCacheControl</filter-name>
        <filter-class>pass.web.servletapi.CacheControlFilter</filter-class>
        <init-param>
            <param-name>enableCaching</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>authorizedUsersOnly</filter-name>
        <filter-class>pass.web.servletapi.AuthorizationFilter</filter-class>
        <init-param>
            <param-name>adminOnly</param-name>
            <param-value>false</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>adminUserOnly</filter-name>
        <filter-class>pass.web.servletapi.AuthorizationFilter</filter-class>
        <init-param>
            <param-name>adminOnly</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>logRequests</filter-name>
        <filter-class>pass.web.servletapi.RequestLoggerFilter</filter-class>
    </filter>
    <!-- Filter mappings for CacheControl -->
    <filter-mapping>
        <filter-name>servletCacheControl</filter-name>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>staticContentCacheControl</filter-name>
        <url-pattern>*.css</url-pattern>
        <url-pattern>*.js</url-pattern>
        <url-pattern>*.png</url-pattern>
        <url-pattern>*.jpg</url-pattern>
        <url-pattern>*.gif</url-pattern>
        <url-pattern>/fonts/*</url-pattern>
    </filter-mapping>
    <!-- Filter mappings for Authorization -->
    <filter-mapping>
        <filter-name>authorizedUsersOnly</filter-name>
        <url-pattern>/user/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>adminUserOnly</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
    <!-- Filter mappings for RequestLogger -->
    <filter-mapping>
        <filter-name>logRequests</filter-name>
        <url-pattern>/verify.do</url-pattern>
    </filter-mapping>
    <session-config>
        <session-timeout>15</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>signin.do</welcome-file>
    </welcome-file-list>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/error.do</location>
    </error-page>
</web-app>
